{
  "compilerOptions": {
    "module": "esnext",
    "typeRoots": ["node_modules/@types", "src/@types"],
    "lib": [
      "es2017"
    ],
    "removeComments": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "target": "es2017",
    "outDir": "lib",
    "allowSyntheticDefaultImports": true
  },
  "files": ["src/@types/graphql.d.ts"],
  "include": ["src/**/*", "config/**/*"],
  "exclude": [
    "node_modules/**/*",
    ".serverless/**/*",
    ".webpack/**/*",
    "_warmup/**/*",
    ".vscode/**/*"
  ]
}
